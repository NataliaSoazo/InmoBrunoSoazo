@model IEnumerable<Contrato>
@{
    ViewData["Title"] = "Index";
}

<h4> Listado  de contratos</h4>

<p>
    <a asp-action="Editar"method = "post">CREAR NUEVO </a>
</p>
<p>
    <a asp-action="VerVigentes">Ver contratos vigentes</a>
</p>
<form asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="buscar" class="btn btn-dark" >
    </p>
</form>
<table class="table" id="table">
      <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaTerm)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Arrendatario)
            </th>
            <th>
                ACCIONES
            </th>
           
        </tr>
    </thead>
    <tbody id="table">
        @foreach (var item in Model)
        {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaTerm)
            </td>
            <td>
                @(item.Arrendatario.Nombre + " " + item.Arrendatario.Apellido)
            </td>
            <td>
                <a asp-action="Detalles" asp-route-id=@item.Id><i class="fa fa-eye " style="font-size:25px;" id="detalles"></i></a>
                <a asp-action="Editar" asp-route-id=@item.Id><i class="fa fa-pencil " style="font-size:25px;" id="edi"></i></a>
                <a href="#"onclick="eliminar('@item.Id')" ><i class="fa fa-trash " style="font-size:25px;"id="eli"></i></a>
                <a asp-controller="Pago" asp-action="Editar" asp-route-idContrato="@item.Id"><i class="fa fa-plus" style="font-size:25px;" id="agregar"></i></a>
            </td>
            </tr>
        }
    </tbody>
</table>

<form class="modal" tabindex="-1" asp-action="Eliminar" id="modal_eliminar_Pago">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">DESEAS ELIMINAR A:</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input type="hidden" name="Id" value="" id ="Pago_eliminar_id">
        <p><span id="Pago_eliminar_id"></span></p>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-danger" >Eliminar</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
      </div>
    </div>
  </div>
</form>

@section Scripts{
    <script>
        function eliminar(id){
            document.querySelector("#Contrato_eliminar_id").value = id;
            document.querySelector("#Contrato_eliminar_id").innerHTML = id;
            $("#modal_eliminar_Pago").modal("show");
        }
    </script>
}