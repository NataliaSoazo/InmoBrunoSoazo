@model IEnumerable<Pago>
@{
    ViewData["Title"] = "Index";
}

<h4> Listado de pagos</h4>

<p>
    <a asp-action="Editar" method="post">CREAR NUEVO </a>
</p>
<form asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="buscar" class="btn btn-dark">
    </p>
</form>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Referencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anulado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdContrato)
            </th>
            <th>
                ACCIONES
            </th>

        </tr>
    </thead>
    <tbody id="table">
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(model => item.Id)
                </th>
                <th>
                    @Html.DisplayFor(model => item.Numero)
                </th>
                <th>
                    @Html.DisplayFor(model => item.Fecha)
                </th>
                <th>
                    @Html.DisplayFor(model => item.Referencia)
                </th>
                <th>
                    @Html.DisplayFor(model => item.Importe)
                </th>
                <th>
                    @Html.DisplayFor(model => item.Anulado)
                </th>
                <th>
                    @Html.DisplayFor(model => item.IdContrato)
                </th>
                <td>
                    <a asp-action="Detalles" asp-route-id=@item.Id><i class="fa fa-eye " style="font-size:25px;"
                            id="detalles"></i></a>
                    <a asp-action="Editar" asp-route-id=@item.Id><i class="fa fa-pencil " style="font-size:25px;"
                            id="edi"></i></a>
                    <a href="#" onclick="eliminar('@item.Id')"><i class="fa fa-trash " style="font-size:25px;"
                            id="eli"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form class="modal" tabindex="-1" asp-action="Eliminar" id="modal_eliminar_Contrato">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">DESEAS ELIMINAR A:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="Id" value="" id="Contrato_eliminar_id">
                <p><span id="Contrato_eliminar_id"></span></p>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function eliminar(id) {
            document.querySelector("#Contrato_eliminar_id").value = id;
            document.querySelector("#Contrato_eliminar_id").innerHTML = id;
            $("#modal_eliminar_Contrato").modal("show");
        }
    </script>
}