@model Pago
@{
    ViewData["Title"] = "Pago";
    int id = Model == null ? 0 : Model.Id;
}


<div class="container text-aligne-center">
    <h4>Pago</h4>
</div>

<hr />
<div class="row">
    <div class="col-6">
        <form asp-action="Guardar" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-2">
                <label class="control-label">CÓDIGO</label>
                <input name="Id" class="form-control" value="@id" readonly />
            </div>
            <div class="form-group col-2">
                <label class="control-label">NÚMERO</label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group col-5">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Referencia" class="control-label"></label>
                <input asp-for="Referencia" class="form-control" />
                <span asp-validation-for="Referencia" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="control-label">
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Anulado" class="control-label"></label>
                <select class="form-control" asp-for="Anulado">
                    @if (Model != null)
                    {
                        if (Model.Anulado == "SI")
                        {
                            <option value="SI" selected>SI</option>
                            <option value="NO">NO</option>
                        }
                        else
                        {
                            <option value="NO" selected>No</option>
                            <option value="SI">SI</option>
                        }
                    }
                    else
                    {
                        <option value="">Selecciona aqui </option>
                        <option value="SI">SI</option>
                        <option value="NO">NO</option>
                    }
                </select>
                <span asp-validation-for="Anulado" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="IdContrato" class="control-label"></label>
                <select class="form-control" name="IdContrato" id="selectContratos">
                    @foreach (var item in (IList<Contrato>)ViewBag.Contratos)
                    {
                        @:<option @(item.Id == Model?.IdContrato ? "selected" : "") value="@item.Id"> @item.Id</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Volver al listado</a>
</div>

<script src="path/to/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('#selectContratos').select2();
    });
</script>
<script src="path/to/select2.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}